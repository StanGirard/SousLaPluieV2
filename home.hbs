{{!-- Layouts --}}
{{!< default}}

{{#contentFor "mapache_class_body"}}is-home{{/contentFor}}
{{#contentFor "mapache_class_site_main"}}pb4{{/contentFor}}

{{!-- Home Top Section --}}




{{!-- Post List - 4 latest articles --}}
<div class="extreme-container">
    <div class="row">
        <div class="col col-left story-feed">
            <div class="secondaryMenu u-paddingTop20 u-paddingBottom20">
                <nav class="container">
                    {{#if @site.secondary_navigation}}
                    {{navigation type="secondary"}}
                    {{else}}
                    {{!-- Tags Cloud Menu or category --}}
                    {{#get "tags" limit="6" include="count.posts" order="count.posts desc" as |category_nav|}}
                    {{#if category_nav}}
                    <ul class="nav">
                        <li>{{#link href="/" activeClass="nav-current"}}{{t "All"}}{{/link}}</li>
                        {{#foreach category_nav}}
                        <li>{{#link href=(url) activeClass="nav-current"}}{{name}}{{/link}}</li>
                        {{/foreach}}
                    </ul>
                    {{/if}}
                    {{/get}}
                    {{/if}}
                </nav>
            </div>
            <div class="story-feed-content">

                {{#foreach posts visibility="all" from="1" to="16"}}
                {{!-- Story List - partials/story/story-list.hbs --}}
                {{> "story/story-list"}}
                {{/foreach}}

            </div>
        </div>
        {{!-- Sidebar - partials/sidebar.hbs --}}
        {{> "sidebar"}}
    </div>
</div>